{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["plugin:prettier/recommended"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12
	},
	"plugins": ["@typescript-eslint"],
	"rules": {
		"prettier/prettier": [
			"warn",
			{
				"trailingComma": "es5",
				"tabWidth": 2,
				"semi": true,
				"singleQuote": true,
				"printWidth": 80,
				"arrowParens": "always",
				"useTabs": false,
				"endOfLine": "lf"
			}
		]
	}
}
